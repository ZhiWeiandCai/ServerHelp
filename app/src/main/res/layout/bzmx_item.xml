<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/listitem_sel">
    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/jinhuang"/>
    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/nameTV"
        android:gravity="center"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/af_khTV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/nameTV"
        android:gravity="center"
        android:textSize="16sp"
        android:text="客户名："/>
    <TextView
        android:id="@+id/khTV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/af_khTV"
        android:layout_below="@id/nameTV"
        android:gravity="center"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/af_compTV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/khTV"
        android:gravity="center"
        android:textSize="16sp"
        android:text="公司名："/>
    <TextView
        android:id="@+id/compTV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/af_compTV"
        android:layout_below="@id/khTV"
        android:gravity="center"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/quyuTV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:layout_below="@id/compTV"
        android:gravity="center"
        android:textSize="16sp"/>
</RelativeLayout>